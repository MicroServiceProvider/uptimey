section.container.panel#default-panel
  .row.text-center.date-wrapper
    .twelve.columns#current-wrapper
      span.label Current date on server
      h4.val#current
  .row.text-center.middle-wrapper
    .four.columns#left-wrapper
      .row
        .nine.columns.u-pull-right#uptime-wrapper
          | Your server's uptime is ...
          .row
            .four.columns.uptime-columns#days-wrapper
              span.val#days
              span.label.text-capitalize days
            .four.columns.uptime-columns#hours-wrapper
              span.val#hours
              span.label.text-capitalize hours
            .four.columns.uptime-columns#minutes-wrapper
              span.val#minutes
              span.label.text-capitalize minutes
      .row
        .nine.columns.u-pull-right#since-time-wrapper
          span.fa.fa-circle-o
          span.val#since-time
    .four.columns#axis-wrapper
      .row
        .twelve.columns
          mixin point(value)
            li(id='#{value}')
              span.fa.fa-dot-circle-o
          - var n = 0
          ul
            while n < 12
              +point(n++)
    .four.columns#right-wrapper
      .row
        .nine.columns#current-time-wrapper
          span.fa.fa-circle-o
          span.val#current-time
      .row
        .nine.columns#location-wrapper
          span.fa.fa-map-marker
          span.val#location
  .row.text-center.date-wrapper
    .twelve.columns#since-wrapper
      span.label Server is active since
      h4.val#since